<div class="filelistWrapper">
    {{> pathBar}}
    <div class="elements">
        {{#each folders}}
            <a class="element folder"
               href="{{concatenate "/tree/" @root/currentPath this}}">
                {{this}}
                <button class="element-delete-button"
                        onclick="deleteResource('{{this}}', 'folder')">
                    X
                </button>
            </a>
        {{/each}}
        {{#each files}}
            <div class="element file">
                {{this}}
                <button class="element-delete-button"
                        onclick="deleteResource('{{this}}', 'file')"
                >
                    X
                </button>
            </div>
        {{/each}}
    </div>
</div>

<script>
    function deleteResource(name, type) {
        if (!["folder", "file"].includes(type)) {
            throw new Error("Invalid argument in deleteResource function.");
        }
        const body = {
            resourceName: name,
            resourceType: type
        };
        fetch("/deleteResource", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            keepalive: true,
            body: JSON.stringify(body)
        })
                .then(response => {
                    if (response.redirected) {
                        window.location.href = response.url;
                    } else {
                        return response.json();
                    }
                })
                .catch(error => console.log(error));
    }
</script>

<style>
    .elements {
        display: flex;
        flex-flow: row wrap;
        justify-content: space-between;
        align-items: center;
        overflow-y: scroll;
    }
    .elements::after {
        content: "";
        flex: auto;
    }

    .element {
        position: relative;
        display: block;
        width: 20%;
        max-width: 100px;
        aspect-ratio: 1/1;
        margin: 20px;
        padding-top: 1.7em;
    }
    .element-delete-button {
        position: absolute;
        display: block;
        top: 0;
        right: 0;
        width: 1.7em;
        height: 1.7em;
        margin: 5px;
        border-radius: 50%;
        background-color: red;
        color: white;
        font-weight: bold;
        border: none;
        cursor: pointer;
        z-index: 3;
    }

    .file {
        background-color: lightblue;
    }
    .folder {
        background-color: slateblue;
    }
</style>