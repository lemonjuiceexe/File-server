<div class="filelistWrapper">
    {{> pathBar}}
    <div class="elements">
        {{#each folders}}
            <div class="element folder">
                {{this}}
                <button
                    onclick="deleteResource('{{this}}', 'folder')"
                >
                    (X)
                </button>
            </div>
        {{/each}}
        {{#each files}}
            <div class="element file">
                {{this}}
                <button
                    onclick="deleteResource('{{this}}', 'file')"
                >
                    (X)
                </button>
            </div>
        {{/each}}
    </div>
</div>

<script>
    // ----Deleting ----
    function deleteResource(name, type){
        if(!["folder", "file"].includes(type)){
            throw new Error("Invalid argument in deleteResource function.");
        }
        const body = {
            resourceName: name,
            resourceType: type
        };
        fetch("/deleteResource", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            keepalive: true,
            body: JSON.stringify(body)
        })
            .then(response => {
                if (response.redirected) {
                    window.location.href = response.url;
                } else {
                    return response.json();
                }
            })
            .catch(error => console.log(error));
    }
</script>

<style>
    .elements {
        display: flex;
        flex-flow: row wrap;
        justify-content: space-between;
        align-items: center;
        overflow-y: scroll;
    }

    .elements::after {
        content: "";
        flex: auto;
    }

    .element {
        width: 20%;
        max-width: 100px;
        aspect-ratio: 1/1;
        margin: 20px;
    }

    .file {
        background-color: lightblue;

    }

    .folder {
        background-color: slateblue;
    }

    .pathBarWrapper {
        display: block;
        margin: 10px;
    }
</style>