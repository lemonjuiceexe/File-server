<aside class="sidebar">
    <a href="/tree/{{parentDirectory}}" class="button-element">Go back</a>
    <fieldset>
        <legend>Preferences</legend>
        <form action="/editPreferences" method="POST">
            <div class="form-group">
                <label for="color-theme-select">Color theme</label>
                <select class="button-element" id="color-theme-select" name="color-theme">
                    {{#each colorThemesNames}}
                        <option {{#if (eq @root/selectedTheme this)}}selected{{/if}}
                                value="{{this}}">
                            {{this}}
                        </option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="text-size-select">Text size</label>
                <input class="button-element" id="text-size-select" name="text-size" type="number" min="6" max="40" value="{{textSize}}">

            </div>
            <div class="form-group">
                <input type="submit" value="Apply" class="button-element">
            </div>
        </form>
    </fieldset>
</aside>