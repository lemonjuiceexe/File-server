{{>header}}
{{>sidebar}}
{{>filelist}}

{{#if errorResourceExists}}
    <script defer>
        alert("Resource already exists!");
    </script>
{{/if}}
{{#if errorInternal}}
    <script defer>
        alert("Something went wrong :(");
    </script>
{{/if}}

<style>
    body {
        width: 100vw;
        height: 100vh;
        overflow-x: hidden;
        display: grid;
        grid-template-columns: 1fr 8fr;
        grid-template-rows: 1fr 9fr;
    }

    .header {
        grid-column: 1 / 3;
        grid-row: 1 / 2;
        display: flex;
        flex-flow: row nowrap;
        justify-content: space-evenly;
        align-items: center;
        background-color: #000;
        color: #fff;
        padding: 10px;
        text-align: center;
        font-size: 20px;
        font-weight: bold;
    }

    .sidebar {
        grid-column: 1 / 2;
        grid-row: 2 / 3;
        display: flex;
        flex-flow: column nowrap;
        justify-content: space-evenly;
        align-items: center;
        background-color: lightblue;
        color: #fff;
        padding: 10px;
        text-align: center;
        font-size: 20px;
        font-weight: bold;
    }

    .filelist {
        grid-column: 2 / 3;
        grid-row: 2 / 3;
    }
</style>